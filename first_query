);

CREATE TABLE IF NOT EXISTS public."Merchant"
(
    merchant_id integer NOT NULL,
    merchant_name character varying,
    merchant_id_category integer
);

CREATE TABLE IF NOT EXISTS public."Merchant_Category"
(
    merchant_category_id integer NOT NULL,
    merchant_name character varying
);

CREATE TABLE IF NOT EXISTS public."Transactions"
(
    transaction_id integer NOT NULL,
    tranaction_date timestamp without time zone,
    transaction_amount numeric,
    card_number character varying,
    merchant_id integer NOT NULL
);
